<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${LOG_LEVEL:-DEBUG}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
